{
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "environment": "production"
  },
  "dataRoot": "./data",
  "logging": {
    "level": "warn",
    "console": true,
    "file": true,
    "maxFiles": 180,
    "maxSize": "10m",
    "retentionDays": 180,
    "cleanupIntervalHours": 6
  },
  "auth": {
    "sessionTimeout": 3600000,
    "passwordMinLength": 8,
    "secureCookies": true
  },
  "scheduler": {
    "checkInterval": 60000,
    "enableFileWatcher": false
  }
}
